<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="AppTheme.Fullscreen" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Custom dialog -->
    <style name="CustomDialogLoading" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- No data view style -->
    <style name="app_no_data_view_style">
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:textSize">@dimen/font_no_data_view</item>
        <item name="android:layout_marginTop">@dimen/no_data_view_margin</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- App text view style -->
    <style name="ParentTextViewStyle">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="ParentTextViewStyleLarge" parent="ParentTextViewStyle">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="ParentTextViewStyleMedium" parent="ParentTextViewStyle">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="ParentTextViewStyleSmall" parent="ParentTextViewStyle">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="TextViewStylePrimaryLarge" parent="ParentTextViewStyleLarge">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextViewStylePrimaryMedium" parent="ParentTextViewStyleMedium">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextViewStylePrimarySmall" parent="ParentTextViewStyleSmall">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


    <style name="TextViewStyleBlackLarge" parent="ParentTextViewStyleLarge">
